pipeline {

    agent any
    
         environment {
              PROJECT_ID = 'certain-cursor-317020'
              LOCATION = 'us-central1-c'
              CREDENTIALS_ID = 'poc'
              CLUSTER_NAME = 'gke-to-be'   
              APP_NAME= 'sockshop'
          }
         
    stages {
         stage('Deploy to GKE test cluster') {
            steps {
 
               // Create namespace if it doesn't exist
               echo "Kubernetes Deployment Started..."
               sh 'pwd'
               echo " Applying deployment changes to Kubernetes cluster"
               step([$class: 'KubernetesEngineBuilder', projectId: env.PROJECT_ID, clusterName: env.CLUSTER_NAME, location: env.LOCATION, manifestPattern: 'deploy/kubernetes/complete-demo.yaml', credentialsId: env.CREDENTIALS_ID, verifyDeployments: true])
               echo "Kubernetes Deployment completed...."
                 }
            
        }    
      }
    }
    
  
  
