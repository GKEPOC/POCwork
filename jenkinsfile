pipeline {

    agent any
    
         environment {
              PROJECT_ID = 'certain-cursor-317020'
              LOCATION = 'us-central1-c'
              CREDENTIALS_ID = 'poc'
              CLUSTER_NAME = 'gke-to-be'   
          }
         
    stages {
         stage('Deploy to GKE test cluster') {
            steps{
               echo "Kubernetes Deployment Started..."
               sh 'pwd'
               sh "sed -i 'weaveworksdemos/front-end:0.3.12' complete-demo.yaml"
               echo " Applying deployment changes to Kubernetes cluster"
               step([$class: 'KubernetesEngineBuilder', projectId: env.PROJECT_ID, clusterName: env.CLUSTER_NAME, location: env.LOCATION, manifestPattern: 'complete-demo.yaml', credentialsId: env.CREDENTIALS_ID, verifyDeployments: true])
               echo "Kubernetes Deployment completed...."
            }
         }
     }
  } 
